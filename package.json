{
  "name": "streamdeck-pomodoro",
  "version": "0.0.0-development",
  "description": "Set a pomodoro timer and be visually notified when the time expires.",
  "private": true,
  "author": "Pascal Jordin",
  "scripts": {
    "build": "yarn clean && webpack --mode=development",
    "build-prod": "yarn clean && webpack --mode=production",
    "ci": "yarn type-check && yarn lint && yarn set-plugin-version 0.0.0",
    "clean": "rimraf ./dist/*",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "husky install",
    "set-plugin-version": "ts-node build/scripts/set-plugin-version.ts",
    "type-check": "tsc --noEmit",
    "update-template": "update-template https://github.com/rweich/streamdeck-ts-template",
    "test": "rm -rf '/Users/jordin/Library/Application Support/com.elgato.StreamDeck/Plugins/com.jordin.pomodoro.sdPlugin' && cp -R 'dist/dev.com.jordin.pomodoro.sdPlugin/' '/Users/jordin/Library/Application Support/com.elgato.StreamDeck/Plugins/com.jordin.pomodoro.sdPlugin/'",
    "logs": "tail -n 100 '/Users/jordin/Library/Logs/StreamDeck/StreamDeck0.log'"
  },
  "dependencies": {
    "@rweich/streamdeck-ts": "^2.0.0"
  },
  "devDependencies": {
    "@amille/semantic-release-plugins": "^3.3.10",
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rweich/eslint-config": "^1.1.0",
    "@rweich/prettier-config": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/jsonfile": "^6.0.0",
    "babel-loader": "^8.2.2",
    "conventional-changelog-conventionalcommits": "^4.6.0",
    "copy-webpack-plugin": "^9.0.0",
    "eslint": "^8.6.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "husky": "^6.0.0",
    "jsonfile": "^6.1.0",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.3",
    "source-map-loader": "^3.0.0",
    "ts-node": "^10.0.0",
    "ts-type-guards": "^0.7.0",
    "typescript": "^4.2.4",
    "update-template": "^1.3.1",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nightillusions/streamdeck-pomodoro"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@rweich"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --quiet --fix"
    ]
  },
  "prettier": "@rweich/prettier-config"
}
